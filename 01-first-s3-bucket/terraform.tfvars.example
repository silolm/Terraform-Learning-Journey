# =============================================================================
# VARIABLES CONFIGURATION - EXAMPLE FILE
# =============================================================================
# COPY THIS FILE AS terraform.tfvars AND FILL WITH YOUR VALUES
# =============================================================================

# üìã BASIC PROJECT CONFIGURATION
project     = "your-project-name"        # REPLACE: Your project name
environment = "development"              # CHOOSE: development/staging/production
owner       = "your-name"                # REPLACE: Your identifier
aws_region  = "us-east-1"               # CHOOSE: AWS region

# üîê AWS CREDENTIALS (GET FROM IAM)
# access_key = "YOUR_ACCESS_KEY_HERE"    # UNCOMMENT and add your key
# secret_key = "YOUR_SECRET_KEY_HERE"    # UNCOMMENT and add your secret

# üè∑Ô∏è OPTIONAL RESOURCE TAGS
tags = {
  Department = "devops"     # MODIFY: Your department
  CostCenter = "learning"   # MODIFY: Your cost center
  Version    = "1.0"        # MODIFY: Your version
}

# üíæ S3 SPECIFIC CONFIGURATION
s3_config = {
  enable_versioning = false  # SET: true to keep file versions
  force_destroy     = true   # SET: false to prevent accidental deletion
}

